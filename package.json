{
  "name": "music-atlas-api",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "next build && prisma migrate deploy",
    "create-user": "doppler run -- bun src/scripts/createUser.ts",
    "dev": "doppler run -- next dev --turbopack",
    "email": "email dev --dir src/emails",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "no-hats package.json && prettier . --check && eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings 0 && tsc --noEmit",
    "predev": "stay-fresh check --install",
    "prelint": "node prisma/.scripts/generate.mjs",
    "prepare": "node .husky/install.mjs && node prisma/.scripts/generate.mjs",
    "set-cors": "doppler run -- bun src/scripts/configure-storage-cors.ts",
    "start": "next start",
    "test:unit": "vitest"
  },
  "dependencies": {
    "@casl/ability": "6.7.3",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/jwt": "1.2.0",
    "@elysiajs/opentelemetry": "1.2.0",
    "@elysiajs/swagger": "1.2.2",
    "@google-cloud/storage": "7.15.2",
    "@prisma/client": "6.4.0",
    "@sentry/bun": "9.2.0",
    "@sentry/nextjs": "9.1.0",
    "@sinclair/typebox": "0.34.15",
    "@types/papaparse": "5.3.15",
    "bad-words": "4.0.0",
    "bcrypt": "5.1.1",
    "date-fns": "4.1.0",
    "doppler": "^1.0.0",
    "elysia": "latest",
    "jsonwebtoken": "9.0.2",
    "lodash": "4.17.21",
    "nanoid": "5.1.2",
    "next": "15.1.6",
    "node-fetch": "3.3.2",
    "papaparse": "5.5.2",
    "resend": "4.4.1",
    "superjson": "2.2.2",
    "throat": "6.0.2",
    "vite-tsconfig-paths": "5.1.4",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@flasd/no-hats": "1.0.3",
    "@flasd/pretty-package": "1.0.3",
    "@flasd/stay-fresh": "2.0.2",
    "@types/analytics-node": "3.1.14",
    "@types/bcrypt": "5.0.2",
    "@types/bun": "1.2.3",
    "@types/jsonwebtoken": "9.0.9",
    "@types/lodash": "4.17.16",
    "@types/node": "20",
    "@types/react": "19",
    "@types/react-dom": "19",
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@typescript-eslint/parser": "7.2.0",
    "@vitejs/plugin-react": "4.3.4",
    "@vitest/coverage-v8": "3.0.6",
    "eslint": "8.57.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-sonarjs": "0.24.0",
    "husky": "9.1.6",
    "jsdom": "26.0.0",
    "lint-staged": "15.2.10",
    "prettier": "3.5.3",
    "prisma": "6.4.0",
    "react-email": "^4.2.8",
    "typescript": "5",
    "typescript-eslint": "8.10.0",
    "vitest": "3.0.6"
  },
  "private": true,
  "lint-staged": {
    "package.json": [
      "pretty-package --write",
      "no-hats"
    ],
    "**/*.{ts,tsx}": [
      "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
      "prettier --write"
    ]
  }
}
